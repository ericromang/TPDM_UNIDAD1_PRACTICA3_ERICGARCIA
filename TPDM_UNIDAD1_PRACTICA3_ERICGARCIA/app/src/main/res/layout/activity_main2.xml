<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACA9A9"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Join a norwegian Club"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_centerHorizontal="true"
        android:text="Practice chatting in Nowrgian with"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_centerHorizontal="true"
        android:text="other learmes"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/t4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/t3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/libro" />

    <ImageView
        android:id="@+id/t5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/t4"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/t4"
        android:background="@drawable/libro" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/t4"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/t4"
        android:background="@drawable/libro" />

    <ImageView
        android:id="@+id/t6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/t5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/libro" />

    <Button
        android:id="@+id/t7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t6"
        android:layout_marginTop="30dp"
        android:text="FIND ME A CLUB" />

    <Button
        android:id="@+id/t8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t7"
        android:layout_marginLeft="5dp"
        android:text="CREATE" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/t8"
        android:layout_toRightOf="@id/t8"
        android:text="CLUB CODE" />

    <ImageView
        android:id="@+id/t9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/t8"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/libro" />

    <ImageView
        android:id="@+id/t10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/t9"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t9"
        android:background="@drawable/libro" />

    <ImageView
        android:id="@+id/t11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/t10"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t10"
        android:background="@drawable/libro" />

    <ImageView
        android:id="@+id/t12"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/t11"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t11"
        android:background="@drawable/libro" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/t12"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t12"
        android:background="@drawable/libro" />


</RelativeLayout>